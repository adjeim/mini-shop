<h2>Log in to your account</h2>

<div>
    <%= form_tag "/login" do %>

      <%= label_tag (:email) %>
      <%= text_field_tag (:email) %><br>

      <%= label_tag (:password) %>
      <%= text_field_tag :password %><br>

      <%= submit_tag ("Log in") %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>