<h2>Sign Up</h2>

<%= form_for User.new do |f| %>
	
	<%= f.label :fname, value: "First Name: " %>
	<%= f.text_field :fname %><br>

	<%= f.label :lname, value: "Last Name: " %>
	<%= f.text_field :lname %><br>

	<%= f.label :address, value: "Address: " %>
	<%= f.text_field :address %><br>

	<%= f.label :email, value: "Email: " %>
	<%= f.text_field :email %><br>

	<%= f.label :password, value: "Password: " %>
	<%= f.password_field :password %><br>

	<%= f.submit %>

<% end %>


<p>Already have an account? <%= link_to "Log in!", login_path %></p>
